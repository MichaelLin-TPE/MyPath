<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.heart_fragment.HeartFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/heart_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/heart_icon"
        android:contentDescription="@null"
        android:src="@drawable/heart_press"
        android:layout_width="@dimen/big_icon_size"
        android:layout_height="@dimen/big_icon_size"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/heart_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/heart_info"
        android:text="@string/no_information_heart"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>