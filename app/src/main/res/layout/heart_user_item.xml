<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/heart_user_item_click_area"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/heart_user_item_photo"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"/>

    <TextView
        android:id="@+id/heart_user_item_name"
        app:layout_constraintTop_toTopOf="@id/heart_user_item_photo"
        app:layout_constraintBottom_toBottomOf="@id/heart_user_item_photo"
        app:layout_constraintLeft_toRightOf="@id/heart_user_item_photo"
        android:layout_marginStart="15dp"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
