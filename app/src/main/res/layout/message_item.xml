<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/message_item_click_area"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/message_item_photo"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/message_item_photo"
        app:layout_constraintLeft_toRightOf="@id/message_item_photo"
        app:layout_constraintBottom_toTopOf="@id/message_item_message"
        android:layout_marginStart="10dp"
        android:id="@+id/message_item_name"
        tools:text="Michael"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintBottom_toBottomOf="@id/message_item_photo"
        app:layout_constraintTop_toBottomOf="@id/message_item_name"
        app:layout_constraintLeft_toRightOf="@id/message_item_photo"
        app:layout_constraintRight_toLeftOf="@id/message_item_time"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/message_item_message"
        tools:text="Michael"
        android:textColor="@color/white_grey"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/message_item_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:id="@+id/message_item_time"
        tools:text="5/21"
        android:textColor="@color/white_grey"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>






</androidx.constraintlayout.widget.ConstraintLayout>
